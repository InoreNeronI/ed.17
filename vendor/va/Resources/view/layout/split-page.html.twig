{% extends '@App/layout.html.twig' %}

{% block styles %}
    {{ parent() }}
    <style type="text/css">
        {% include '@App/layout/css/split-page.css.twig' %}
    </style>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="scripts/jquery-resize/jquery-resizable.js"></script>
{% endblock %}

{% block jq_ready %}
    {{ parent() }}
    {% include '@App/layout/js/split-page.js.twig' %}
    {% include '@App/field/js/media.js.twig' with { 'tag': 'audio' } %}
    {% include '@App/field/js/media.js.twig' with { 'tag': 'video' } %}
{% endblock %}