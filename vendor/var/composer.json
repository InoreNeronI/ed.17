{
  "require": {
    "php": ">=5.4",
    "ext-pdo_mysql": "*",
    "ext-pdo_sqlite": "*",
    "ext-zip": "*",
    "doctrine/dbal": "@stable",
    "kriswallsmith/assetic": "@stable",
    "symfony/event-dispatcher": "@stable",
    "symfony/http-kernel": "@stable",
    "symfony/http-foundation": "@stable",
    "symfony/routing": "@stable",
    "symfony/yaml": "@stable",
    "tholu/php-packer": "@stable",
    "twig/twig": "@stable",
    "vlucas/phpdotenv": "@stable"
  },
  "require-dev": {
    "andig/dbcopy": "@dev",
    "incenteev/composer-parameter-handler": "@stable",
    "neronmoon/scriptsdev": "@stable",
    "symfony/console": "@stable",
    "symfony/finder": "@stable",
    "symfony/var-dumper": "@stable"
  },
  "scripts": {
    "build-install": "@install --no-ansi --no-dev --no-interaction --no-progress --no-scripts",
    "build-update": "@update --no-ansi --no-dev --no-interaction --no-progress --no-scripts",
    "codefix": "php ../../bin/php-cs.phar fix --config=.php_cs",
    "post-package-install": "sh -c \"Resources/script/shell/clean.sh .. var || true\"",
    "post-install-cmd": ["npm --prefix \"Resources/config\" install", "@pre-build", "printf \"\\n\\tVendors has been installed succesfully\\n\""],
    "post-update-cmd": ["npm --prefix \"Resources/config\" update", "@pre-build", "printf \"\\n\\tVendors has been updated succesfully\\n\""],
    "pre-autoload-dump": "true",
    "pre-build": ["@pre-build-assets", "@pre-build-source", "@composer dump-autoload"],
    "pre-build-assets": "bash -c \"Resources/script/shell/publish.sh ../.. var\"",
    "pre-build-source": "#cp -Rn .. ../../src || true",
    "pre-install-cmd": "printf \"\\n\\tInstalling vendors\\n\\n\"",
    "pre-update-cmd": "printf \"\\n\\tUpdating vendors\\n\\n\""
  },
  "autoload": {
    "psr-4": {"": "."}
  },
  "config": {
    "bin-dir": "../../bin",
    "optimize-autoloader": true,
    "platform": {"php": "5.4"},
    "preferred-install": "dist",
    "vendor-dir": ".."
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "incenteev-parameters": [{
      "file": "../../app/connection.yml",
      "dist-file": "Resources/config/connection.dist.yml"
    }],
    "scripts-dev": {
      "build-parameters": ["printf \"\\n\\tBuilding parameters\\n\\n\"", "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"],
      "post-install-cmd": ["@build-parameters"],
      "post-update-cmd": ["@build-parameters"]
    }
  }
}