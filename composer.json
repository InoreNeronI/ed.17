{
  "require-dev": {
    "wikimedia/composer-merge-plugin": "@dev"
  },
  "scripts": {
    "post-install-cmd": "printf \"\\n\\tDependencies has been installed succesfully\\n\"",
    "post-update-cmd": "printf \"\\n\\tDependencies has been updated succesfully\\n\"",
    "pre-install-cmd": "printf \"\\n\\tInstalling dependencies\\n\\n\"",
    "pre-update-cmd": "printf \"\\n\\tUpdating dependencies\\n\\n\""
  },
  "config": {
    "bin-dir": "bin",
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "vendor-dir": "app/cache/vendor"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "incenteev-parameters": [{
      "file": "app/connection.yml",
      "dist-file": "vendor/va/Resources/config/connection.dist.yml"
    }],
    "merge-plugin": {
      "require": ["vendor/va/composer.json"],
      "recurse": false,
      "replace": false,
      "merge-dev": true,
      "merge-extra": true,
      "merge-extra-deep": false,
      "merge-scripts": true
    },
    "scripts-dev": {
      "bin-install": [
        "printf \"\\n\"",
        "[ -d \"bin\" ] || mkdir -v bin",
        "[ -e \"bin/checker.phar\" ] || curl -Lo bin/checker.phar http://get.sensiolabs.org/security-checker.phar",
        "[ -e \"bin/crypto.phar\" ] || curl -Lo bin/crypto.phar https://github.com/defuse/php-encryption/releases/download/v2.0.3/defuse-crypto.phar",
        "[ -e \"bin/crypto.phar.sig\" ] || curl -Lo bin/crypto.phar.sig https://github.com/defuse/php-encryption/releases/download/v2.0.3/defuse-crypto.phar.sig",
        "[ -e \"bin/deptrac.phar\" ] || curl -Lo bin/deptrac.phar http://get.sensiolabs.de/deptrac.phar",
        "[ -e \"bin/php-cs.phar\" ] || curl -Lo bin/php-cs.phar https://github.com/FriendsOfPHP/PHP-CS-Fixer/releases/download/v2.3.1/php-cs-fixer.phar",
        "[ -e \"bin/phpunit.phar\" ] || curl -Lo bin/phpunit.phar https://phar.phpunit.de/phpunit-old.phar",
        "[ -e \"bin/phpunit.phar.asc\" ] || curl -Lo bin/phpunit.phar.asc https://phar.phpunit.de/phpunit-old.phar.asc",
        "printf \"\\n\\tBinaries has been installed succesfully\\n\\n\""
      ],
      "bin-update": [
        "@bin-install",
        "php bin/deptrac.phar selfupdate || true",
        "php bin/php-cs.phar selfupdate || true",
        "php bin/phpunit.phar --self-update || true",
        "printf \"\\n\\tBinaries has been updated succesfully\\n\\n\""
      ],
      "build-parameters": ["printf \"\\n\\tBuilding parameters\\n\\n\"", "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"],
      "codefix": "php bin/php-cs.phar fix --config=vendor/va/.php_cs",
      "deptrac": "php bin/deptrac.phar",
      "post-install-cmd": ["@bin-install", "@build-parameters"],
      "post-update-cmd": ["@bin-update", "@build-parameters"]
    }
  }
}