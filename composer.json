{
  "require": {
    "neronmoon/scriptsdev": "@stable",
    "wikimedia/composer-merge-plugin": "@dev"
  },
  "scripts": {
    "build-parameters": ["printf \"\\n\\tBuilding parameters\\n\\n\"", "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"],
    "optimize": "@composer dump-autoload --optimize",
    "post-install-cmd": ["@composer optimize", "printf \"\\n\\tVendors installed succesfully\\n\\n\"", "@build-parameters"],
    "post-update-cmd": ["@composer optimize", "printf \"\\n\\tVendors updated succesfully\\n\\n\"", "@build-parameters"],
    "pre-install-cmd": "printf \"\\n\\tInstalling dependencies\\n\\n\"",
    "pre-update-cmd": "printf \"\\n\\tUpdating dependencies\\n\\n\""
  },
  "scripts-dev": {
    "build": ["bash -c ./app/shell/publish.sh"],
    "post-install-cmd": ["npm install", "@build"],
    "post-update-cmd": ["npm update", "@build"]
  },
  "extra": {
    "incenteev-parameters": [{
      "file": "app/connection.yml",
      "dist-file": "app/connection.dist.yml"}
    ],
    "merge-plugin": {
      "require": ["vendor-tiny/composer.json"],
      "recurse": true,
      "replace": true,
      "merge-dev": true,
      "merge-extra": false,
      "merge-extra-deep": false
    }
  },
  "config": {
    "bin-dir": "bin",
    "platform": {"php": "7.0"},
    "preferred-install": "dist",
    "vendor-dir": "vendor"
  }
}
