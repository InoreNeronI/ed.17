{
  "require-dev": {
    "wikimedia/composer-merge-plugin": "@dev"
  },
  "scripts": {
    "build-assets": ["chmod -v +x ./app/shell/publish.sh || true", "bash -c ./app/shell/publish.sh"],
    "post-install-cmd": ["npm install", "@build-assets", "printf \"\\n\\tDependencies has been installed succesfully\\n\""],
    "post-update-cmd": ["npm update", "@build-assets", "printf \"\\n\\tDependencies has been updated succesfully\\n\""],
    "pre-install-cmd": "printf \"\\n\\tInstalling dependencies\\n\\n\"",
    "pre-update-cmd": "printf \"\\n\\tUpdating dependencies\\n\\n\""
  },
  "autoload": {
    "psr-4": {"": "src"}
  },
  "config": {
    "bin-dir": "bin",
    "vendor-dir": "vendor"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "incenteev-parameters": [{
      "file": "app/connection.yml",
      "dist-file": "app/connection.dist.yml"
    }],
    "merge-plugin": {
      "require": ["vendor/composer.json"],
      "recurse": false,
      "replace": false,
      "merge-dev": true,
      "merge-extra": true,
      "merge-extra-deep": false,
      "merge-scripts": true
    },
    "scripts-dev": {
      "bin-install": [
        "printf \"\\n\"",
        "[ -d \"bin\" ] || mkdir -v bin",
        "[ -e \"bin/checker.phar\" ] || curl -Lo bin/checker.phar http://get.sensiolabs.org/security-checker.phar",
        "[ -e \"bin/deptrac.phar\" ] || curl -Lo bin/deptrac.phar http://get.sensiolabs.de/deptrac.phar",
        "[ -e \"bin/php-cs.phar\" ] || curl -Lo bin/php-cs.phar https://github.com/FriendsOfPHP/PHP-CS-Fixer/releases/download/v2.1.2/php-cs-fixer.phar",
        "[ -e \"bin/phpunit.phar\" ] || curl -Lo bin/phpunit.phar https://phar.phpunit.de/phpunit-old.phar",
        "printf \"\\n\\tBinaries has been installed succesfully\\n\\n\""
      ],
      "bin-update": [
        "@bin-install",
        "php bin/deptrac.phar selfupdate || true",
        "php bin/php-cs.phar selfupdate || true",
        "php bin/phpunit.phar --self-update || true",
        "printf \"\\n\\tBinaries has been updated succesfully\\n\\n\""
      ],
      "build-parameters": ["printf \"\\n\\tBuilding parameters\\n\\n\"", "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"],
      "codefix": "php bin/php-cs.phar fix --config=.php_cs && bash bin/ s analyse src || true",
      "deptrac": "php bin/deptrac.phar",
      "post-install-cmd": ["@bin-install", "@build-parameters", "@security-check"],
      "post-update-cmd": ["@bin-update", "@build-parameters", "@security-check"],
      "security-check": "php bin/checker.phar security:check composer.lock || true",
      "test": "php bin/phpunit.phar"
    }
  }
}