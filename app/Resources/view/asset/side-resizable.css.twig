* {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

body {
    overflow-x: hidden;
}

.mw-95 { max-width: 95%; }

.option {
    background-color: aliceblue;
}

.side-container {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-direction: row;
    overflow: hidden;
    height: 100vh;
    width: 100%;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    will-change: overflow;
}

.side-splitter {
    background-color: #e2e2e2;{#background: url("/images/jquery-resize/vsizegrip.png") center center no-repeat #e2e2e2;#}
    cursor: col-resize;
    flex: 0 0 auto;
    min-height: 200px;
    width: .75rem;
}

.side-left, .side-right {
    overflow: auto;
    height: auto;
    -webkit-overflow-scrolling: touch;
    -ms-overflow-style: none;
}

.side-left {
    flex: 0 0 auto;
    {#white-space: nowrap;#}{# Expands the text to the right and forces horizontal scroll. #}
}

.side-right {
    flex: 1 1 auto;
}