*, *:before, *:after {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    {# @url http://stackoverflow.com/a/880518 #}
    -webkit-user-select: none; /* webkit (safari, chrome) browsers */
    -khtml-user-select: none; /* webkit (konqueror) browsers */
    -moz-user-select: none; /* mozilla browsers */
    -ms-user-select: none; /* IE10+ */
}

body {
    overflow-x: hidden;
}

.option {
    {#background-color: aliceblue;#}
    border-bottom: 1px dashed cadetblue;
    border-left: 1px dashed cadetblue;
}

.side-container {
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-direction: row;
    height: 100vh;
    overflow: hidden;
    width: 100%;
    will-change: overflow;
}

.side-splitter {
    background-color: #e2e2e2;{#background: url("/images/jquery-resize/vsizegrip.png") center center no-repeat #e2e2e2;#}
    cursor: col-resize;
    flex: 0 0 auto;
    min-height: 200px;
    width: .75rem;
}

.side-left, .side-right {
    background-color: white;
    height: auto;
    overflow: auto;
    -webkit-overflow-scrolling: touch;
    -ms-overflow-style: none;
}

.side-left {
    flex: 0 0 auto;
    {#white-space: nowrap;#}{# Expands the text to the right and forces horizontal scroll. #}
}

.side-right {
    flex: 1 1 auto;
}

