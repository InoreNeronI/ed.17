{# @see https://codepen.io/rstrahl/pen/eJZQej #}
{# @see http://caniuse.com/#search=flexbox #}

*, *:before, *:after {
    box-sizing: border-box;
    {# @see http://stackoverflow.com/a/880518 #}
    -webkit-user-select: none; {# webkit (safari, chrome) browsers #}
    -khtml-user-select: none; {# webkit (konqueror) browsers #}
    -moz-user-select: none; {# mozilla browsers #}
    -ms-user-select: none; {# IE10+ #}
}

body {
    overflow: hidden;
}

.side-container {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
        -ms-flex-direction: row;
            flex-direction: row;
    height: 100vh;
    overflow: hidden;
    width: 100%;
    will-change: overflow;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
}

.side-splitter {
    background-color: #727272;{#background: url("/images/jquery-resize/vsizegrip.png") center center no-repeat #e2e2e2;#}
    cursor: col-resize;
    -webkit-box-flex: 0;
        -ms-flex: 0 0 auto;
            flex: 0 0 auto;
    width: .25rem;
}

.side-left, .side-right {
    height: auto;
    overflow: auto;
    overflow-scrolling: touch;
    -webkit-overflow-scrolling: touch;
    -ms-overflow-style: none;
}

.side-left form, .side-right form {
    background-color: white;
}

.side-left {
    -webkit-box-flex: 0;
        -ms-flex: 0 0 auto;
            flex: 0 0 auto;
    {#white-space: nowrap;#}{# Expands the text to the right and forces horizontal scroll. #}
}

.side-right {
    -webkit-box-flex: 1;
        -ms-flex: 1 1 auto;
            flex: 1 1 auto;
}
.side-submit {
    {#box-shadow: -.1rem 0 gray, 0 0 gray, .1rem 0 gray, 0 -.1rem gray;#}
}
.side-submit:hover {
    border-color: gray;
    {#box-shadow: none;#}
}

{# @see https://gist.github.com/pom-pom/10255961 #}
input[type="radio"],
input[type="checkbox"] {
    position: absolute;
    visibility: hidden;
}
input[type="radio"] + span,
input[type="checkbox"] + span {
    font-family: 'FontAwesome';
    font-size: 1.3rem;
}
input[type="radio"] + span:before {
    content: "\f10c"; {# Radio Unchecked #}
}
input[type="radio"]:checked + span:before {
    content: "\f05d"; {# Radio Checked #}
}
input[type="checkbox"] + span:before {
    content: "\f096"; {# Checkbox Unchecked #}
}
input[type="checkbox"]:checked + span:before {
    content: "\f046"; {# Checkbox Checked #}
}