$('input:radio').on('click', function() {
    var oldValue = $(this).attr('oldValue');
    if (oldValue === 'checked' || (typeof oldValue === 'undefined' && $(this).prop('checked') === false)) {
        $(this).prop('checked', false);
        $(this).attr('oldValue', false);
    } else {
        var name = $(this).prop('name');
        $('input[name="'+name+'"]:radio').attr('oldValue', false);
        $(this).attr('oldValue', 'checked');
    }
});

