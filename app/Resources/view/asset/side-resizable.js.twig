{# Radios: @url http://jsfiddle.net/dan74/6KYVP #}
$('input:radio').on('click', function() {
    var oldStatus = $(this).attr('oldStatus');
    if (oldStatus === 'checked' || (typeof oldStatus === 'undefined' && $(this).prop('checked') === false)) {
        $(this).prop('checked', false);
        $(this).removeAttr('oldStatus');
    } else {
        $(this).attr('oldStatus', 'checked');
    }
});

{# Checkboxes: @url http://stackoverflow.com/a/7264962 #}
var checkboxes = $('input:checkbox'), requireds = [], realRequireds = [];
checkboxes.each(function() {
    var item = this.id.split('-');
    if (!(item[0] in requireds)) {
        requireds[item[0]] = [];
    }
    requireds[item[0]][item[1]] = $(this).prop('required');
});
checkboxes.on('click', function() {
    var key, item = this.id.split('-');
    if (item[1] in requireds[item[0]] && $(this).prop('checked') === false) {
        realRequireds[item[0]] = [];
        for (key in requireds[item[0]]) {
            if (requireds[item[0]][key] !== false) {
                realRequireds[item[0]].push(key);
            }
        }
        var requiredOptions = $('#'+item[0]+'-'+realRequireds[item[0]].join(',#'+item[0]+'-')), requiredOptionsLength = requiredOptions.length;
        $(requiredOptions).each(function() { this.checked ? requiredOptionsLength-- : null; });
        for (key in realRequireds[item[0]]) {
            if (requiredOptionsLength < requiredOptions.length) {
                $(requiredOptions.eq(key)).removeAttr('required');
            } else {
                $(requiredOptions.eq(key)).prop('required', requireds[item[0]][item[1]]);
            }
        }
    } else {
        for (key in requireds[item[0]]) {
            $('#'+item[0]+'-'+key).removeAttr('required');
        }
    }
});

