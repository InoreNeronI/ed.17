{% if not isOption and mediaItem is not null %}
    {% if mediaItem['alignment'] is same as('cen') and mediaItem['since'] == textNum and mediaItem['till']|number_format == textNum %}
        {% include 'partial/sample/' ~ mediaName ~ '-sample.html.twig' with { 'cssClassContent': color|default('black') ~ ' ' ~ mediaItem['width'] } %}
    {% elseif mediaItem['alignment'] is same as('dch') and mediaItem['till']|number_format == textNum %}
        {% include 'partial/sample/' ~ mediaName ~ '-sample.html.twig' with { 'cssClassContainer': color|default('black') ~ ' dib pl1 ' ~ mediaItem['width'], 'cssClassContent': 'w-100' } %}
    {% endif %}
{% endif %}