{% if not isOption and media is not null %}
    {% if text is null %}
        {% set text %}
            {% include 'partial/sample/' ~ media['tag'] ~ '-sample.html.twig' with { 'cssClassContainer': 'fl pr1 tc ' ~ media['width'], 'cssClassContent': color|default('black-90') ~ ' w-100' } %}
        {% endset %}
    {% elseif media['align'] is same as('izq') and media['since']|number_format == textNum %}
        {% include 'partial/sample/' ~ media['tag'] ~ '-sample.html.twig' with { 'cssClassContainer': 'fl pr1 tc ' ~ media['width'], 'cssClassContent': color|default('black-90') ~ ' w-100' } %}
    {% elseif media['align'] is same as('dch') and media['since']|number_format == textNum %}
        {% include 'partial/sample/' ~ media['tag'] ~ '-sample.html.twig' with { 'cssClassContainer': 'fr pl1 tc ' ~ media['width'], 'cssClassContent': color|default('black-90') ~ ' w-100' } %}
    {% endif %}
{% endif %}