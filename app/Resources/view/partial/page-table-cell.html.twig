
{% set cellClass = 'dtc v-mid ' ~ (isOption or parentRowNum is not defined ? 'pv1 tc' : 'ph2 pv1') %}
{% if tableRowNum is same as('0') %}
    {% set columsArray = columsArray|merge({('c' ~ column): key}) %}
    {% if text is not empty or isOption %}
        {% if column == 1 %}
            {% set cellClass = cellClass ~ ' bl' %}
        {% endif %}
        {% set cellClass = cellClass ~ ' bb br bt bw1' %}
    {% elseif text is empty %}
        {% set cellClass = cellClass ~ ' bb br bw1' %}
    {% endif %}
{% elseif text is not empty or isOption %}
    {% set cellClass = tableRowNum > parentRowNum ? cellClass ~ ' bl' : cellClass %}
    {% set cellClass = cellClass ~ ' bb br bw1' %}
{% endif %}

{% if parentRowNum is not defined %}
    <div class="dt {{ class }} mv1 mv2-l w-100"><div class="dt-row"><div class="{{ cellClass }}">
    {% elseif tableRowNum > parentRowNum %}
        {% set column = 1 %}
        </div><div class="dt-row"><div class="{{ cellClass }}">
    {% elseif tableRowNum is same as('0') or tableRowNum is same as(parentRowNum) %}
    <div class="{{ cellClass }}">
{% endif %}