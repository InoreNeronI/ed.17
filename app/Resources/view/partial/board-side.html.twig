{% for key, text in texts %}

    {% set isOption = key in options %}
    {% set class = isOption ? 'pl4 option' : 'pl1' %}

    <article>
        <label id="{{ key }}" class="{{ class }}">{{ text|raw }}</label>
    </article>

{% endfor %}