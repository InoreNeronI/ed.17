<input name="flabel" type="hidden" value="{{ flabel }}"/>
<input name="fcurso" type="hidden" value="{{ fcurso }}"/>
<input name="fperiodo" type="hidden" value="{{ fperiodo }}"/>
<input name="flengua" type="hidden" value="{{ flengua }}"/>
<input name="fititular" type="hidden" value="{{ fititular }}"/>
<input name="fititulo" type="hidden" value="{{ fititulo }}"/>
<input name="ftestuak" type="hidden" value="{{ ftestuak }}"/>
