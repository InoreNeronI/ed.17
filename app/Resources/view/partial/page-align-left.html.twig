{% if not isOption and mediaItem is not null %}
    {% if text is null %}
        {% set text %}
            {% include 'partial/sample/' ~ mediaName ~ '-sample.html.twig' with { 'cssClassContainer': color|default('black') ~ ' fl pr1 ' ~ mediaItem['width'], 'cssClassContent': 'w-100' } %}
        {% endset %}
    {% elseif mediaItem['alignment'] is same as('izq') and mediaItem['since']|number_format == textNum %}
        {% include 'partial/sample/' ~ mediaName ~ '-sample.html.twig' with { 'cssClassContainer': color|default('black') ~ ' fl pr1 ' ~ mediaItem['width'], 'cssClassContent': 'w-100' } %}
    {% endif %}
{% endif %}