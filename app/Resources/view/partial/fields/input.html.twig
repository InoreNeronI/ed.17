{% set inputClass = inputClass|default('bg-white pl1 br2-ns br--left-ns') %}
{% set inputClass = width is defined ? inputClass ~ ' ' ~ width : inputClass %}
{% set placeholder = type|default('text') is same as('text') ? ' placeholder="' ~ placeholder|default(textPlaceholder|default) ~ '"' : '' %}
{% set inputPattern = maxLength|default is not empty or minLength|default is not empty ? ' data-minlength="' ~ minLength|default(0) ~ '" data-maxlength="' ~ maxLength|default(10) ~ '" title="' ~ minLength|default(0) ~ ' to ' ~ maxLength|default(10) ~ ' chars"' : '' %}
<input class="{{ inputClass }}" type="{{ type|default('text') }}" name="{{ name|default }}" value="{{ value|default }}" id="{{ id|default }}" {{ checked|default }} {{ disabled|default }} {{ readonly|default }} {{ required|default }} {{ inputPattern }} {{ placeholder }} oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('{{ validation.option[type|default('text')] }}')" autocomplete="off"/>