{% set inputClass = inputClass is defined ? inputClass : type is same as('text') or type is empty ? 'f6 f5-l black-80 bg-white pa1 pl2 br2-ns br--left-ns' %}
{% set inputClass = width is defined ? inputClass ~ ' ' ~ width : inputClass %}
{% set inputClass = inputClass ~ ' v-top' %}
{% set placeholder = type is same as('text') or type is empty ? ' placeholder="' ~ placeholder|default(textPlaceholder|default('')) ~ '"' : '' %}
<input class="{{ inputClass }}" type="{{ type|default('text') }}" name="{{ name|default('') }}" value="{{ value|default('') }}" id="{{ id|default('') }}" {{ disabled|default('') }} {{ required|default('') }} {{ placeholder }} />