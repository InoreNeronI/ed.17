<div class="dtc mt3 fl tc w-100">
    <label class="dib {{ fontClassX3 }}fw3 lh-copy pr2-ns tc tr-ns v-mid w-100 w-50-m w-50-ns" for="studentCode">{{ code }}</label>
    <input class="b pv1 pv2-l input-reset ba login-field tc v-mid w-75 w-30-m w-30-ns" type="text" name="studentCode" id="studentCode" required oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('{{ validation.option['text'] }}')" autocomplete="off"/>
</div>
<div class="dtc mt3 fr w-100">
    <label class="dib {{ fontClassX3 }}fw3 lh-copy tc tr-ns v-mid w-100 w-50-m w-50-ns" for="studentDay">{{ bdate }}</label>
    <div class="dib tc tr-m v-mid w-100 w-40-m w-40-ns">
        <div class="dib tc pb1 w-100">
            <label for="studentDay" class="dib {{ fontClass }}fw3 v-mid w-100 w-40-m w-50-ns">{{ bday }}</label>
            <select class="b ba dib input-reset login-field no-underline pa1-l tc v-mid w-75 w-50-m w-40-ns" name="studentDay" id="studentDay" required oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('{{ validation.option['select'] }}')" autocomplete="off">
                <option class="black" value="" selected="selected">&nbsp;</option>
                {% for i in 1..31 %}
                    <option class="black" value="{{ (1 == loop.index|length ? '0' : '') ~ loop.index }}">{{ loop.index }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="dib w-100 tc">
            <label for="studentMonth" class="dib {{ fontClass }}fw3 v-mid w-100 w-40-m w-50-ns">{{ bmonth }}</label>
            <select class="b ba dib input-reset login-field no-underline pa1-l tc v-mid w-75 w-50-m w-40-ns" name="studentMonth" id="studentMonth" required oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('{{ validation.option['select'] }}')" autocomplete="off">
                <option class="black" value="" selected="selected">&nbsp;</option>
                <option class="black" value="01">{{ jan }}</option>
                <option class="black" value="02">{{ feb }}</option>
                <option class="black" value="03">{{ mar }}</option>
                <option class="black" value="04">{{ apr }}</option>
                <option class="black" value="05">{{ may }}</option>
                <option class="black" value="06">{{ jun }}</option>
                <option class="black" value="07">{{ jul }}</option>
                <option class="black" value="08">{{ aug }}</option>
                <option class="black" value="09">{{ sep }}</option>
                <option class="black" value="10">{{ oct }}</option>
                <option class="black" value="11">{{ nov }}</option>
                <option class="black" value="12">{{ dec }}</option>
            </select>
        </div>
    </div>
</div>
<div class="dtc mt3 fl w-100 tc">
    <label class="dib {{ fontClassX3 }}fw3 lh-copy tc tr-ns pr2-ns v-mid w-100 w-60-m w-70-ns" for="studentPassword">{{ codpro }}</label>
    <input class="b ba dib input-reset login-field pv1 pv2-l tc v-mid w-75 w-20-m w-10-ns" type="text" name="studentPassword" id="studentPassword" required oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('{{ validation.option['text'] }}')" autocomplete="off"/>
</div>