{% extends '@App/layout/form.html.twig' %}

{% block title title ~ ' :: ' ~ course ~ ' :: ' ~ mainTitle|title %}

{% block content_form %}
    <div class="dn dib-ns dn-m fl pl2  {{ colorInverse }}title-shadow w-100 w-25-m w-25-ns">
        <h3 class="{{ fontClassX3 }}fw6 mb2 pl4"><strong>{{ entrance }}</strong></h3>
    </div>
    <div class="ba b--black-30 bg-black-20 br3 dt fr h-100 mh2-ns mw7-ns w-100 w-80-ns w-75-m w-60-l">
        {% block content_actions %}
            <article class="dtc pa2 tc v-mid">
                {% for key, value in actions %}
                    <button class="{{ fontClass ~ (key is same as(table) ? ' b form-logo-bg navy br2 br3-ns pointer ' : ' arrow ba bg-transparent ') ~ colorInverse }} br1 br2-l lh-copy measure mh1 mv2 ph3 pv2 w-30-ns w-40-m" name="{{ key }}"{{ (key is not same as(table)) ? ' disabled="disabled"' }}>
                        {{ value }}
                    </button>
                    {% if (key is same as(table)) %}
                        <input name="flabel" type="hidden" value="{{ value }}"/>
                    {% endif %}
                {% endfor %}
                {% include '@App/field/hidden-fields.html.twig' %}
            </article>
        {% endblock %}
    </div>
{% endblock %}